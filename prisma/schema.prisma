generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  reviews   Review[]
  createdAt DateTime @default(now())
}

model Game {
  id        String   @id @default(uuid())
  title     String
  platform  String
  releaseAt Int
  reviews   Review[]
  description String
  genre     String
  creators  String
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String
  user      User   @relation(fields: [userId], references: [id])
  userId    String
  game      Game   @relation(fields: [gameId], references: [id])
  gameId    String
  createdAt DateTime @default(now())
}
